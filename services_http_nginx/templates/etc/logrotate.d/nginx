# {{ansible_managed}}
# {% set data=corpusops_services_http_nginx_vars %}
/var/log/nginx/*.log {
	daily
	missingok
	rotate {{data.rotate}}
	compress
	delaycompress
	notifempty
	create 0640 www-data adm
	sharedscripts
	prerotate
		if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
			run-parts /etc/logrotate.d/httpd-prerotate; \
		fi \
	endscript
	postrotate
		invoke-rc.d nginx rotate >/dev/null 2>&1
	endscript
}
